{
	"name": "Snoozz - Tab Snoozing",
	"short_name": "Snoozz",
	"description": "Declutter your windows by snoozing tabs for later",

	"icons": {
		"128": "icons/ext-icon-128.png",
		"48": "icons/ext-icon-48.png",
		"32": "icons/ext-icon-32.png",
		"16": "icons/ext-icon-16.png"
	},

	"browser_action": {
		"default_popup": "popup/popup.html"
	},

	"options_ui": {
		"page": "settings.html",
		"open_in_tab": true
	},
	
	"background": {
		"scripts": ["scripts/async_utils.js", "scripts/utils.js", "scripts/dayjs.min.js", "background.js"]
	},

	"permissions": ["alarms", "contextMenus", "notifications", "storage", "tabs"],

	"manifest_version": 2,
	"version": "2.0.0"
}