{
	"name": "Snoozz - Snooze Tabs & Windows for later",
	"short_name": "Snoozz",
	"description": "Declutter your browser by snoozing tabs and windows for later, and have them automatically wake up when you actually need them.",

	"icons": {
		"128": "icons/ext-icon-128.png",
		"48": "icons/ext-icon-48.png",
		"32": "icons/ext-icon-32.png",
		"16": "icons/ext-icon-16.png"
	},

	"browser_action": {
		"default_popup": "html/popup.html"
	},

	"options_ui": {
		"page": "html/settings.html",
		"open_in_tab": true
	},
	
	"background": {
		"scripts": ["scripts/dayjs.min.js", "scripts/common.js", "scripts/background.js"]
	},

	"permissions": ["alarms", "contextMenus", "notifications", "storage", "tabs", "idle"],

	"manifest_version": 2,
	"version": "2.1.2"
}