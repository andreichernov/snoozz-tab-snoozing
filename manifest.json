{
	"name": "Tab Snoozer",
	"description": "Declutter your windows by snoozing tabs for later",

	"icons": {
		"128": "icons/ext-icon.png"
	},

	"browser_action": {
		"default_popup": "popup/popup.html"
	},

	
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"permissions": ["alarms", "storage", "tabs"],

	"manifest_version": 2,
	"version": "1.0"
}